{
  "name": "biztech-script-automation",
  "version": "1.0.0",
  "description": "Biztech PowerShell script automation tool with modern GUI interface",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "powershell",
    "automation",
    "gui"
  ],
  "author": "mrdatawolf",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "appId": "com.trustbiztech.scriptautomation",
    "productName": "Biztech Script Automation",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "asarUnpack": [
      "scripts/**/*"
    ],
    "files": [
      "src/**/*",
      "scripts/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "scripts",
        "to": "scripts",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
